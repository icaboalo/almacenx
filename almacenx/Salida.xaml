        <Label Content="Cantidad:" HorizontalAlignment="Left" Margin="35,182,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txCantiadad" HorizontalAlignment="Left" Height="23" Margin="122,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Fecha de Registro:" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpFechaRegistro" HorizontalAlignment="Left" Margin="149,10,0,0" VerticalAlignment="Top"/>
        <Label Content="idUser: " Grid.Column="1" HorizontalAlignment="Left" Margin="20,140,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbUser" Grid.Column="1" HorizontalAlignment="Left" Margin="75,140,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="regresar" HorizontalAlignment="Left" Margin="80,235,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Salir" Grid.Column="1" HorizontalAlignment="Left" Margin="91,235,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
    </Grid>
</Window>
